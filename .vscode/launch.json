    "version": "0.2.0",
    "configurations": [
        {
            "name": "page",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": [],
            "console": "externalTerminal",
        },
        {
            "name": "page builder",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": ["build"],
            "console": "externalTerminal",
        },
        {
            "name": "page new",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": ["new"],
            "console": "externalTerminal",
        },
        {
            "name": "page conf registrar add namecheap",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": ["conf", "registrar", "add", "namecheap"],
            "console": "externalTerminal",
        },
        {
            "name": "page up",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": ["up"],
            "console": "externalTerminal",
            "env": {
                "PAGE_CLI_DEBUG": "true"
            }
        },
        {
            "name": "page infra mimetype { \"file_path\": \"/var/style.css\" }",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": ["infra", "mimetype", "{ \"file_path\": \"/var/style.css\" }"],
            "console": "externalTerminal",
        },
    ]
}